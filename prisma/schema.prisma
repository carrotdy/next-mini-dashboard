generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

enum RecordCategory {
  steps
  sleep
  mood
  panic
}

model Record {
  id        String         @id @default(cuid())
  date      DateTime
  category  RecordCategory
  title     String
  value     Float
  note      String?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}